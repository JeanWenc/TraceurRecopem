<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.TrackListActivity">

    <TextView
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/trackmgr_tracklist"
        android:paddingBottom="5dp"/>

    <FrameLayout android:layout_weight="1" android:layout_width="fill_parent"
        android:layout_height="0dip" android:padding="3dp">

        <ListView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/list">
        </ListView>

        <TextView android:text="@string/trackmgr_empty" android:padding="5dp"
            android:id="@+id/trackmgr_empty" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:gravity="center" style="@android:style/TextAppearance.Medium" />
    </FrameLayout>


</LinearLayout>