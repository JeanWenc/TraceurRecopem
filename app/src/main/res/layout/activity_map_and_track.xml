<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MapAndTrackActivity">


    <org.osmdroid.views.MapView android:id="@+id/activity_display_map_map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/activity_display_map_show_track_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/activity_display_map_show_point_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_display_map_ic_center_map"
        android:src="@drawable/osm_ic_center_map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        />

    <!--
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_display_map_ic_record_track"
            android:src="@drawable/ic_record_track"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:tint="@android:color/holo_red_dark"
            android:background="#ffffffff"
            android:cropToPadding="true"
            />
            -->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_display_map_ic_show_beacon"
            android:src="@drawable/marker_default"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:tint="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:cropToPadding="true"
            />
    </RelativeLayout>