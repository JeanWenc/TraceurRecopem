<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.dataInput.dataInputCatchSale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_data_input_catch_sale_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/data_input_catch_sale_question"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Large"
                />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_data_input_catch_sale_question_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">
                <RadioButton android:id="@+id/activity_data_input_catch_sale_question_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    style="@android:style/TextAppearance.Medium"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton android:id="@+id/activity_data_input_catch_sale_question_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_marginLeft="20dp"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/activity_catch_sale_quantity_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/activity_data_input_catch_sale_question_N"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/data_input_catch_sale_question_N"
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.Medium"
                    />

                <NumberPicker
                    android:id="@+id/activity_data_input_catch_sale_input_N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_data_input_catch_sale_question_N"
                    />

                <NumberPicker
                    android:id="@+id/activity_data_input_catch_sale_input_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_data_input_catch_sale_question_N"
                    android:layout_toRightOf="@id/activity_data_input_catch_sale_input_N"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/activity_data_input_catch_sale_question_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_data_input_catch_sale_question_N"
                    android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                    android:layout_marginLeft="40dp"
                    android:text="@string/data_input_catch_sale_question_price"
                    style="@android:style/TextAppearance.Medium"/>

                <Spinner
                    android:id="@+id/activity_data_input_catch_sale_input_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_data_input_catch_sale_question_price"
                    android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/activity_data_input_catch_sale_question_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                    android:layout_below="@id/activity_data_input_catch_sale_input_price"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/data_input_catch_sale_question_where"
                    style="@android:style/TextAppearance.Medium"/>

                <Spinner
                    android:id="@+id/activity_data_input_catch_sale_input_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_data_input_catch_sale_question_where"
                    android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    />

                <EditText
                    android:id="@+id/activity_data_input_catch_sale_input_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Ajoute des dÃ©tails, si besoin."
                    android:layout_below="@id/activity_data_input_catch_sale_input_N"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_catch_sale_pic_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/activity_data_input_catch_sale_question_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_input_catch_sale_question_pic"
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.Medium"
                    />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/activity_data_input_catch_sale_question_pic_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/activity_data_input_catch_sale_question_pic_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oui"
                        style="@android:style/TextAppearance.Medium"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton android:id="@+id/activity_data_input_catch_sale_question_pic_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_marginLeft="20dp"
                        android:onClick="onRadioButtonClicked"/>
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/activity_data_input_catch_sale_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="30dp"
                android:layout_marginBottom="10dp"
                android:text="Suivant"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>